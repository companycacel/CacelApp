<UserControl x:Class="CacelApp.Shared.Controls.DataTable.DataTableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:CacelApp.Shared.Controls.DataTable"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    
    <UserControl.Resources>

    <local:PackIconVisibilityConverter x:Key="PackIconVisibilityConverter" />

        <!-- Template para botón de expansión/colapso de filas -->
        <DataTemplate x:Key="ExpanderTemplate">
            <CheckBox Style="{StaticResource MaterialDesignIconButton}"
                      Width="32" Height="32"
                      IsChecked="{Binding IsExpanded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      ToolTip="Ver todos los detalles"
                      Foreground="{DynamicResource MaterialDesignBody}"
                      Opacity="0.6"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                <CheckBox.Content>
                    <materialDesign:PackIcon Width="18" Height="18">
                        <materialDesign:PackIcon.Style>
                            <Style TargetType="materialDesign:PackIcon">
                                <Setter Property="Kind" Value="ChevronRight"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                        <Setter Property="Kind" Value="ChevronDown"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </materialDesign:PackIcon.Style>
                    </materialDesign:PackIcon>
                </CheckBox.Content>
            </CheckBox>
        </DataTemplate>
        <DataTemplate x:Key="FilledStateTemplate">
            <Border CornerRadius="3" Padding="8,4" HorizontalAlignment="Center"
                Background="{Binding Color, FallbackValue=Transparent}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Width="16" Height="16" Margin="0,0,5,0" VerticalAlignment="Center"
                        Kind="{Binding Icon}"
                        Foreground="White"
                        Visibility="{Binding Icon, Converter={StaticResource PackIconVisibilityConverter}, FallbackValue=Collapsed}" />
                    <TextBlock Text="{Binding Value}"
                        FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center"
                        Foreground="White" />
                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="OutlineStateTemplate">
            <Border CornerRadius="3" Padding="8,4" HorizontalAlignment="Center"
                Background="Transparent" BorderThickness="1">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="BorderBrush" Value="{Binding Color}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Color}" Value="{x:Null}">
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Width="16" Height="16" Margin="0,0,5,0" VerticalAlignment="Center"
                        Kind="{Binding Icon}"
                        Visibility="{Binding Icon, Converter={StaticResource PackIconVisibilityConverter}, FallbackValue=Collapsed}">
                        <materialDesign:PackIcon.Style>
                            <Style TargetType="materialDesign:PackIcon">
                                <Setter Property="Foreground" Value="{Binding Color}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Color}" Value="{x:Null}">
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </materialDesign:PackIcon.Style>
                    </materialDesign:PackIcon>
                    <TextBlock Text="{Binding Value}"
                        FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{Binding Color}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Color}" Value="{x:Null}">
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="IconStateTemplate">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <materialDesign:PackIcon Width="16" Height="16" Margin="0,0,5,0" VerticalAlignment="Center"
                    Kind="{Binding Icon}"
                    Visibility="{Binding Icon, Converter={StaticResource PackIconVisibilityConverter}, FallbackValue=Collapsed}">
                    <materialDesign:PackIcon.Style>
                        <Style TargetType="materialDesign:PackIcon">
                            <Setter Property="Foreground" Value="{Binding Color}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Color}" Value="{x:Null}">
                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </materialDesign:PackIcon.Style>
                </materialDesign:PackIcon>
                <TextBlock Text="{Binding Value}"
                    FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{Binding Color}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Color}" Value="{x:Null}">
                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Barra de búsqueda y acciones -->
        <Border Grid.Row="0" 
                Background="{DynamicResource MaterialDesignCardBackground}" 
                Padding="15,10"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

              

                <TextBox Grid.Column="1"
                         Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:TextFieldAssist.LeadingIcon="Magnify"
                         materialDesign:HintAssist.Hint="Buscar en tabla..."
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Width="400"
                         HorizontalAlignment="Right"
                         VerticalAlignment="Center"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1"
                  x:Name="MainDataGrid"
                  ItemsSource="{Binding PaginatedData}"
                  SelectedItem="{Binding SelectedItem}"
                  IsReadOnly="False"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="True"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  ColumnHeaderHeight="45"
                  RowHeight="{Binding RowHeight, RelativeSource={RelativeSource AncestorType=UserControl}}"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  BeginningEdit="MainDataGrid_BeginningEdit"
                  Background="{DynamicResource MaterialDesignCardBackground}"
                  GridLinesVisibility="None"
                  Margin="0,0,0,0"
                  materialDesign:DataGridAssist.CellPadding="12,8"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="12,10"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  VirtualizingPanel.CacheLength="20"
                  VirtualizingPanel.CacheLengthUnit="Item">
            
            <!-- Template para detalles expandibles de la fila -->
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Border Background="{DynamicResource MaterialDesignCardBackground}"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="0,1,0,0"
                            Padding="60,15,15,15">
                        <Grid x:Name="ExpandedDetails">
                            <!-- El contenido se generará dinámicamente desde code-behind -->
                        </Grid>
                    </Border>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
            
            <DataGrid.CellStyle>
                <Style TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="12,0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="DetailsVisibility" Value="Collapsed"/>
                    <Setter Property="MinHeight" Value="48"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                        </Trigger>
                        <!-- Resaltar fila cuando está en modo edición -->
                        <DataTrigger Binding="{Binding Item.IsEditing}" Value="True">
                            <Setter Property="Background" Value="#FEF3C7"/>
                            <Setter Property="BorderBrush" Value="#F59E0B"/>
                            <Setter Property="BorderThickness" Value="0,2,0,2"/>
                            <Setter Property="MinHeight" Value="68"/>
                        </DataTrigger>
                        <!-- Mostrar detalles cuando IsExpanded es true -->
                        <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                            <Setter Property="DetailsVisibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                    <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Setter Property="Padding" Value="12,10"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>

        <!-- Fila de totales -->
        <Border Grid.Row="2"
                x:Name="TotalsRow"
                Background="{DynamicResource MaterialDesignCardBackground}"                
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="0,2,0,0"
                Padding="5,5,0,0"
                Margin="0,0,0,0"
                Visibility="{Binding ShowTotals, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid x:Name="TotalsGrid" 
                  Height="55"
                  Background="{DynamicResource MaterialDesignCardBackground}"/>
        </Border>

        <!-- Controles de paginación -->
        <Border Grid.Row="3" 
                Background="{DynamicResource MaterialDesignCardBackground}"
                Padding="15,10"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Selector de tamaño de página -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock Text="Filas por página:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    <ComboBox ItemsSource="{Binding PageSizeOptions}"
                              SelectedItem="{Binding PageSize}"
                              Width="80"
                              Height="45"
                              VerticalAlignment="Center"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                </StackPanel>
                <StackPanel Grid.Column="1" 
              Orientation="Horizontal" 
              VerticalAlignment="Center"
              HorizontalAlignment="Center">
                    <TextBlock Text="Mostrando " 
                 VerticalAlignment="Center"
                 Margin="0,0,5,0"
                 Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    <TextBlock VerticalAlignment="Center"
                 Foreground="{DynamicResource MaterialDesignBody}"
                 FontWeight="SemiBold">
          <Run Text="{Binding TotalRecords, Mode=OneWay}"/>
          <Run Text=" de "/>
          <Run Text="{Binding TotalAllRecords, Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock Text=" registros" 
                 VerticalAlignment="Center"
                 Margin="5,0,0,0"
                 Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                </StackPanel>

                <!-- Controles de navegación -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    
                    <TextBlock Text="Página " 
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    <TextBlock Text="{Binding CurrentPage}" 
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                    <TextBlock Text=" de " 
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    <TextBlock Text="{Binding TotalPages}" 
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Margin="0,0,20,0"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                    
                    <Button Command="{Binding FirstPageCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Primera página"
                            Width="32" Height="32">
                        <materialDesign:PackIcon Kind="PageFirst" Width="20" Height="20"/>
                    </Button>
                    <Button Command="{Binding PreviousPageCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Página anterior"
                            Width="32" Height="32"
                            Margin="5,0">
                        <materialDesign:PackIcon Kind="ChevronLeft" Width="20" Height="20"/>
                    </Button>
                    <Button Command="{Binding NextPageCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Página siguiente"
                            Width="32" Height="32"
                            Margin="5,0">
                        <materialDesign:PackIcon Kind="ChevronRight" Width="20" Height="20"/>
                    </Button>
                    <Button Command="{Binding LastPageCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Última página"
                            Width="32" Height="32">
                        <materialDesign:PackIcon Kind="PageLast" Width="20" Height="20"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
