<Window x:Class="CacelApp.Shared.Controls.Form.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        ResizeMode="CanResize"
        SizeToContent="Height"
        MinWidth="600"
        MaxWidth="1400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource AppPrimaryBrush}"
                Padding="24,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Icono + Título -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon x:Name="HeaderIcon"
                                           Width="32" 
                                           Height="32" 
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="0,0,16,0"/>
                    <StackPanel>
                        <TextBlock x:Name="HeaderTitle"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                        <TextBlock x:Name="HeaderSubtitle"
                                   FontSize="14"
                                   Foreground="White"
                                   Opacity="0.9"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Contenido adicional del header (Estado, Fecha, etc.) -->
                <ContentPresenter Grid.Column="2" 
                                  x:Name="HeaderExtraContent"
                                  VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Contenido Principal con ScrollViewer -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="24">
            <ContentPresenter x:Name="MainContent"/>
        </ScrollViewer>

        <!-- Footer con botones de acción -->
        <Border Grid.Row="2" 
                Background="{DynamicResource MaterialDesignCardBackground}"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="0,1,0,0"
                Padding="24,16">
            <ContentPresenter x:Name="FooterContent" HorizontalAlignment="Right"/>
        </Border>
    </Grid>
</Window>
