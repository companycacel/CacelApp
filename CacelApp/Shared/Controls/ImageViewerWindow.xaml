<Window x:Class="CacelApp.Shared.Controls.ImageViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:CacelApp.Config.Converters"
        Title="Visualizador de Imágenes"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        ResizeMode="CanResize">

    <Window.Resources>
        <converters:BooleanToScrollBarVisibilityConverter x:Key="BooleanToScrollBarVisibilityConverter"/>
        
        <Style x:Key="NavigationButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
        </Style>

        <Style x:Key="ZoomButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignFloatingActionButton}">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource PrimaryHueDarkBrush}" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Imágenes del Registro de Balanza" 
                               FontSize="20" 
                               FontWeight="Bold"   Foreground="{DynamicResource MaterialDesignBody}"
                               />
                    <TextBlock Text="{Binding TituloSecundario}" 
                               FontSize="14" 
                               FontWeight="Medium"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" 
                        Command="{Binding CerrarCommand}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Cerrar">
                    <materialDesign:PackIcon Kind="Close" 
                                           Width="24" 
                                           Height="24"    Foreground="{DynamicResource MaterialDesignBody}"
                                          />
                </Button>
            </Grid>
        </Border>

        <!-- Contenido Principal -->
        <Grid Grid.Row="1" Background="#F5F5F5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Tabs para Pesaje y Destare -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource MaterialDesignPaper}" 
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="0,0,0,1"
                    Padding="20,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <RadioButton Content="Imágenes de Pesaje" 
                                 IsChecked="{Binding MostrarPesaje, Mode=TwoWay}"
                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                 Margin="0,0,20,0"
                                 FontSize="15"
                                 FontWeight="Bold"/>
                    <RadioButton Content="Imágenes de Destare" 
                                 IsChecked="{Binding MostrarDestare, Mode=TwoWay}"
                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                 FontSize="15"
                                 FontWeight="Bold"
                                 Visibility="{Binding TieneImagenesDestare, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </Border>

            <!-- Área de Visualización -->
            <Grid Grid.Row="1" Margin="20">
                <!-- Carrusel de Imágenes -->
                <Grid Visibility="{Binding ModoCarrusel, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Botón Anterior -->
                    <Button Grid.Column="0" 
                            Command="{Binding ImagenAnteriorCommand}"
                            Style="{StaticResource NavigationButton}"
                            VerticalAlignment="Center"
                            Margin="0,0,10,0"
                            IsEnabled="{Binding PuedeIrAnterior}">
                        <materialDesign:PackIcon Kind="ChevronLeft" Width="30" Height="30"/>
                    </Button>

                    <!-- Imagen Principal -->
                    <Border Grid.Column="1" 
                            Background="White" 
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="2"
                            CornerRadius="8"
                            ClipToBounds="True">
                        <Grid>
                            <!-- ScrollViewer para permitir desplazamiento con zoom -->
                            <ScrollViewer HorizontalScrollBarVisibility="{Binding MostrarScrollBars, Converter={StaticResource BooleanToScrollBarVisibilityConverter}}"
                                        VerticalScrollBarVisibility="{Binding MostrarScrollBars, Converter={StaticResource BooleanToScrollBarVisibilityConverter}}"
                                        PanningMode="Both"
                                        PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
                                <!-- Imagen con transformación de escala -->
                                <Image Source="{Binding ImagenActual}" 
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Cursor="Hand"
                                       MouseLeftButtonDown="Image_MouseLeftButtonDown"
                                       MouseMove="Image_MouseMove"
                                       MouseLeftButtonUp="Image_MouseLeftButtonUp"
                                       RenderTransformOrigin="0.5,0.5">
                                    <Image.RenderTransform>
                                        <ScaleTransform ScaleX="{Binding EscalaZoom}" 
                                                      ScaleY="{Binding EscalaZoom}"/>
                                    </Image.RenderTransform>
                                </Image>
                            </ScrollViewer>

                            <!-- Overlay de Loading -->
                            <Border Background="#E0000000" 
                                    Visibility="{Binding CargandoImagen, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel HorizontalAlignment="Center" 
                                          VerticalAlignment="Center">
                                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                               IsIndeterminate="True"
                                               Width="60"
                                               Height="60"
                                               Foreground="White"/>
                                    <TextBlock Text="Cargando imagen..." 
                                             FontSize="14" 
                                             Foreground="White"
                                             HorizontalAlignment="Center"
                                             Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Indicador de Posición -->
                            <Border Background="{DynamicResource PrimaryHueDarkBrush}" 
                                    CornerRadius="15"
                                    Padding="15,8"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Margin="0,10,0,0">
                                <TextBlock Foreground="White" 
                                         FontSize="15"
                                         FontWeight="Bold">
                                    <Run Text="{Binding IndiceActual, Mode=OneWay}"/>
                                    <Run Text="/"/>
                                    <Run Text="{Binding TotalImagenes, Mode=OneWay}"/>
                                </TextBlock>
                            </Border>

                            <!-- Controles de Zoom -->
                            <StackPanel Orientation="Horizontal" 
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Bottom"
                                      Margin="0,0,15,15">
                                <Button Command="{Binding ZoomInCommand}"
                                      Style="{StaticResource ZoomButton}"
                                      ToolTip="Acercar">
                                    <materialDesign:PackIcon Kind="MagnifyPlus" Width="22" Height="22"/>
                                </Button>
                                <Button Command="{Binding ZoomOutCommand}"
                                      Style="{StaticResource ZoomButton}"
                                      ToolTip="Alejar">
                                    <materialDesign:PackIcon Kind="MagnifyMinus" Width="22" Height="22"/>
                                </Button>
                                <Button Command="{Binding ZoomResetCommand}"
                                      Style="{StaticResource ZoomButton}"
                                      ToolTip="Restablecer zoom">
                                    <materialDesign:PackIcon Kind="MagnifyRemoveOutline" Width="22" Height="22"/>
                                </Button>
                                <Button Command="{Binding ToggleFullscreenCommand}"
                                      Style="{StaticResource ZoomButton}"
                                      ToolTip="Pantalla completa">
                                    <materialDesign:PackIcon Kind="Fullscreen" Width="22" Height="22"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Botón Siguiente -->
                    <Button Grid.Column="2" 
                            Command="{Binding ImagenSiguienteCommand}"
                            Style="{StaticResource NavigationButton}"
                            VerticalAlignment="Center"
                            Margin="10,0,0,0"
                            IsEnabled="{Binding PuedeIrSiguiente}">
                        <materialDesign:PackIcon Kind="ChevronRight" Width="30" Height="30"/>
                    </Button>
                </Grid>

                <!-- Vista en Cuadrícula -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                            Visibility="{Binding ModoGrilla, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ItemsControl ItemsSource="{Binding ImagenesActuales}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" 
                                         HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White"
                                      BorderBrush="{DynamicResource MaterialDesignDivider}"
                                      BorderThickness="2"
                                      CornerRadius="8"
                                      Margin="8"
                                      Width="350"
                                      Height="250"
                                      Cursor="Hand"
                                      MouseLeftButtonDown="ImagenGrilla_Click">
                                    <Image Source="{Binding}" 
                                         Stretch="Uniform"
                                         Margin="5"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- Footer con controles -->
        <Border Grid.Row="2" 
                Background="{DynamicResource MaterialDesignPaper}"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Vista Mode Toggle -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <RadioButton Content="Carrusel" 
                               IsChecked="{Binding ModoCarrusel, Mode=TwoWay}"
                               Style="{StaticResource MaterialDesignChoiceChipSecondaryRadioButton}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,0,8,0"/>
                    <RadioButton Content="Cuadrícula" 
                               IsChecked="{Binding ModoGrilla, Mode=TwoWay}"
                               Style="{StaticResource MaterialDesignChoiceChipSecondaryRadioButton}"
                               FontSize="14"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Botón Cerrar -->
                <Button Grid.Column="2"
                      Command="{Binding CerrarCommand}"
                      Style="{StaticResource MaterialDesignRaisedButton}"
                      Content="Cerrar"
                      Width="120"
                      Height="36"/>
            </Grid>
        </Border>
    </Grid>
</Window>
