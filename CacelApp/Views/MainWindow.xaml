<Window x:Class="CacelApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:CacelApp"
        mc:Ignorable="d"
        Title="Cacel Balanza - Sistema de Pesajes" Height="700" Width="1200">
    <materialDesign:DrawerHost IsLeftDrawerOpen="{Binding IsMenuOpen}">

        <materialDesign:DrawerHost.LeftDrawerContent>
            <DockPanel Width="250">
                <StackPanel DockPanel.Dock="Top" Background="{DynamicResource SecondaryHueMidBrush}" Height="150" >
                    <Image Source="/Assets/Image/logo_balanza.png" Height="60" Width="60" HorizontalAlignment="Left"/>
                    <TextBlock Text="Menú Principal" Foreground="White" Margin="0,10,0,0" FontWeight="Bold"/>
                </StackPanel>

                <ScrollViewer>
                    <StackPanel>
                        <Button Style="{StaticResource MaterialDesignFlatButton}" HorizontalAlignment="Stretch"
                                Command="{Binding NavigateCommand}" CommandParameter="Balanza">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ScaleBalance" Margin="0,0,10,0"/>
                                <TextBlock Text="Balanza"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}" HorizontalAlignment="Stretch"
                                Command="{Binding NavigateCommand}" CommandParameter="Pesajes">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Weight" Margin="0,0,10,0"/>
                                <TextBlock Text="Pesajes"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}" HorizontalAlignment="Stretch"
                                Command="{Binding NavigateCommand}" CommandParameter="Produccion">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Factory" Margin="0,0,10,0"/>
                                <TextBlock Text="Producción"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}" HorizontalAlignment="Stretch"
                                Command="{Binding NavigateCommand}" CommandParameter="Config">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Cog" Margin="0,0,10,0"/>
                                <TextBlock Text="Configuración"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </materialDesign:DrawerHost.LeftDrawerContent>

        <DockPanel>
            <ToolBarTray DockPanel.Dock="Top">
                <ToolBar Style="{DynamicResource MaterialDesignToolBar}" 
                 Background="{DynamicResource MaterialDesignPaper}">

                    <Button Style="{StaticResource MaterialDesignToolButton}" 
                    Command="{Binding ToggleMenuCommand}"
                    ToolTip="Abrir/Cerrar Menú"
                    Padding="0" Width="40" Height="40">
                        <materialDesign:PackIcon Kind="Menu" Width="24" Height="24"/>
                    </Button>

                    <TextBlock Text="{Binding CurrentModuleTitle}" 
                       Margin="10,0,0,0" 
                       VerticalAlignment="Center" 
                       FontSize="18"
                       FontWeight="DemiBold"/>
                </ToolBar>
            </ToolBarTray>

            <ContentControl Content="{Binding CurrentView}" Margin="10"/>
        </DockPanel>

    </materialDesign:DrawerHost>
</Window>
