<UserControl x:Class="CacelApp.Views.Modulos.Balanza.Balanza"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:CacelApp.Views.Modulos.Balanza"
             xmlns:controls="clr-namespace:CacelApp.Shared.Controls.DataTable"
             xmlns:form="clr-namespace:CacelApp.Shared.Controls.Form"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"  MinWidth="800"
             d:DataContext="{d:DesignInstance Type=local:BalanzaModel, IsDesignTimeCreatable=False}"
             Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{DynamicResource PrimaryMidBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <TextBlock Text="Módulo de Balanza Electrónica"
                               FontSize="28"
                               FontWeight="Bold"
                           
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Gestión de pesajes y registros de vehículos"
                               FontSize="13"                               
                               Opacity="0.9"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" >
                    <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                        <TextBlock Text="Total Registros" FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        <TextBlock Text="{Binding TotalRegistros}" FontSize="18" FontWeight="SemiBold" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                        <TextBlock Text="Monto Total" FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        <TextBlock Text="{Binding MontoTotal, StringFormat='C2'}" FontSize="18" FontWeight="SemiBold" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                        <TextBlock Text="Peso Neto Prom." FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        <TextBlock FontSize="18" FontWeight="SemiBold" >
                            <Run Text="{Binding PesoNetoPromedio, StringFormat=N2}"/>
                            <Run Text=" kg"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="{DynamicResource MaterialDesignCardBackground}"
                Padding="20"  CornerRadius="8,8,0,0">
            <StackPanel>
                <TextBlock Text="Filtros de Búsqueda" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,15"
                           Foreground="{DynamicResource MaterialDesignBody}"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,15,0">
                        <form:FormDatePicker Label="Fecha Inicio"
                                             Value="{Binding FechaInicio, Mode=TwoWay}"
                                             Width="130"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,15,0">
                        <form:FormDatePicker Label="Fecha Final"
                                             Value="{Binding FechaFinal, Mode=TwoWay}"
                                             Width="130"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="0,0,15,0">
                        <form:FormField Label="Placa"
                                        Value="{Binding FiltroPlaca, Mode=TwoWay}"
                                        MaxLength="8"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" Margin="0,0,15,0">
                        <form:FormField Label="Nombre del cliente"
                                        Value="{Binding FiltroCliente, Mode=TwoWay}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,0">
                        <form:CustomButton Command="{Binding BuscarCommand}"
                                           Variant="Search"
                                           Text="Aplicar Filtros"
                                           Margin="0,0,10,0"/>

                        <form:CustomButton Command="{Binding AgregarCommand}"
                                           Variant="Add" Text="Agregar"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Tabla Reutilizable con Paginación Integrada -->
        <controls:DataTableControl 
            Grid.Row="2"
            DataContext="{Binding TableViewModel}"
            Columns="{Binding DataContext.TableColumns, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

    </Grid>
</UserControl>