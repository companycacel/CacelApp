<UserControl x:Class="CacelApp.Views.Modulos.Balanza.Balanza"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:CacelApp.Views.Modulos.Balanza"
             xmlns:controls="clr-namespace:CacelApp.Shared.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"  MinWidth="800"
             d:DataContext="{d:DesignInstance Type=local:BalanzaModel, IsDesignTimeCreatable=True}"
             Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.Resources>
        <!-- Template para columna de Estado -->
        <DataTemplate x:Key="EstadoTemplate">
            <materialDesign:PackIcon 
                Kind="{Binding Item.EstadoOK, Converter={StaticResource BoolToTickCrossConverter}}"
                Foreground="{Binding Item.EstadoOK, Converter={StaticResource BoolToGreenRedConverter}}"
                Width="24" 
                Height="24"
                HorizontalAlignment="Center"
                ToolTip="{Binding Item.EstadoOK, Converter={StaticResource BoolToEstadoTextConverter}}"/>
        </DataTemplate>

        <!-- Template para botón de expansión -->
        <DataTemplate x:Key="ExpanderTemplate">
            <CheckBox Style="{StaticResource MaterialDesignIconButton}"
                      Width="32" Height="32"
                      IsChecked="{Binding IsExpanded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      ToolTip="Ver todos los detalles"
                      Foreground="{DynamicResource MaterialDesignBody}"
                      Opacity="0.6"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                <CheckBox.Content>
                    <materialDesign:PackIcon Width="18" Height="18">
                        <materialDesign:PackIcon.Style>
                            <Style TargetType="materialDesign:PackIcon">
                                <Setter Property="Kind" Value="ChevronRight"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                        <Setter Property="Kind" Value="ChevronDown"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </materialDesign:PackIcon.Style>
                    </materialDesign:PackIcon>
                </CheckBox.Content>
            </CheckBox>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{DynamicResource PrimaryMidBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <TextBlock Text="Módulo de Balanza Electrónica"
                               FontSize="28"
                               FontWeight="Bold"
                           
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Gestión de pesajes y registros de vehículos"
                               FontSize="13"                               
                               Opacity="0.9"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" >
                    <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                        <TextBlock Text="Total Registros" FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        <TextBlock Text="{Binding TotalRegistros}" FontSize="18" FontWeight="SemiBold" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                        <TextBlock Text="Monto Total" FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        <TextBlock Text="{Binding MontoTotal, StringFormat='C2'}" FontSize="18" FontWeight="SemiBold" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                        <TextBlock Text="Peso Neto Prom." FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        <TextBlock FontSize="18" FontWeight="SemiBold" >
                            <Run Text="{Binding PesoNetoPromedio, StringFormat=N2}"/>
                            <Run Text=" kg"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="{DynamicResource MaterialDesignCardBackground}" BorderBrush="{DynamicResource MaterialDesignDividerBrush}"
                BorderThickness="0,1,0,1"
                Padding="20" CornerRadius="8,8,0,0">
            <StackPanel>
                <TextBlock Text="Filtros de Búsqueda" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,15"
                           Foreground="{DynamicResource MaterialDesignBody}"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,15,0">
                        
                        <DatePicker SelectedDate="{Binding FechaInicio}"
                                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                    materialDesign:HintAssist.Hint="Fecha Inicio"
                                    Width="130"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,15,0">
                        
                        <DatePicker SelectedDate="{Binding FechaFinal}"
                                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                    materialDesign:HintAssist.Hint="Fecha Final"
                                    Width="130"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="0,0,15,0">
                       
                        <TextBox Text="{Binding FiltroPlaca, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Placa"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" Margin="0,0,15,0">
                       
                        <TextBox Text="{Binding FiltroCliente, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Nombre del cliente"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="4" Margin="0,0,15,0">
                       
                        <ComboBox ItemsSource="{Binding EstadoOptions}"
                          SelectedItem="{Binding SelectedEstadoOption, Mode=TwoWay}"
                          DisplayMemberPath="Label"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                          materialDesign:HintAssist.Hint="Estado"/>
                    </StackPanel>

                    <StackPanel Grid.Column="6" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,0">
                        <Button Command="{Binding BuscarCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="5"
                                Background="{StaticResource MaterialDesign.Brush.Primary}"
                                Padding="15,8" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Filter" Margin="0,0,8,0" VerticalAlignment="Center" Foreground="White"/>
                                <TextBlock Text="Aplicar Filtros" VerticalAlignment="Center" Foreground="White"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding AgregarCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="5"
                                Padding="20,8" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" Margin="0,0,8,0" VerticalAlignment="Center" Foreground="White"/>
                                <TextBlock Text="Nuevo" VerticalAlignment="Center" Foreground="White"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding GenerarReporteCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                materialDesign:ButtonAssist.CornerRadius="5"
                                Padding="20,8">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileExcel" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Reporte" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Tabla Reutilizable con Paginación Integrada -->
        <controls:DataTableControl 
            Grid.Row="2"
            DataContext="{Binding TableViewModel}"
            Columns="{Binding DataContext.TableColumns, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

    </Grid>
</UserControl>