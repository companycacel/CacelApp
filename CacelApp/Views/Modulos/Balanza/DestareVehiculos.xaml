<Window x:Class="CacelApp.Views.Modulos.Balanza.DestareVehiculos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controls="clr-namespace:CacelApp.Shared.Controls.DataTable"
        xmlns:form="clr-namespace:CacelApp.Shared.Controls.Form"
        xmlns:converters="clr-namespace:CacelApp.Config.Converters"
        Title="Buscar Registro para Destare" 
        Height="700" 
        Width="1100"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        ResizeMode="CanResize">

    <Window.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource AppPrimaryBrush}"
                Padding="24,20">
            <StackPanel>
                <TextBlock Text="Buscar Registro para Destare"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="White"/>
                <TextBlock Text="Seleccione un registro de pesaje de los últimos 3 días"
                           FontSize="14"
                           Foreground="White"
                           Opacity="0.9"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Filtros -->
        <Border Grid.Row="1" 
                Background="{DynamicResource MaterialDesignCardBackground}"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="0,0,0,1"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Filtro por placa -->
                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                    <form:FormField 
                                Label="Buscar por placa"
                                Value="{Binding FiltroTexto, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <!-- Filtro por fecha -->
                <StackPanel Grid.Column="2" Margin="0,0,15,0">
                    <form:FormDatePicker 
                                     Label="Fecha"
                                     Value="{Binding FechaFiltro}"
                                     IsEnabled="{Binding MostrarTodos, Converter={StaticResource InverseBooleanConverter}}"/>
                </StackPanel>
                <!-- Checkbox Mostrar Todos -->
                <StackPanel Grid.Column="4" Margin="0,0,15,0">
                    <CheckBox 
                          Content="Mostrar Todos"
                          IsChecked="{Binding MostrarTodos}"
                          VerticalAlignment="Center"
                          />
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataTable de registros -->
        <Border Grid.Row="2" 
                Padding="24"
                Background="{DynamicResource MaterialDesignCardBackground}">
            <controls:DataTableControl DataContext="{Binding TableViewModel}"
                                       Columns="{Binding DataContext.ColumnasDestare, RelativeSource={RelativeSource AncestorType=Window}}"/>
        </Border>

        <!-- Botones -->
        <Border Grid.Row="3" 
                Background="{DynamicResource MaterialDesignCardBackground}"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="0,1,0,0"
                Padding="24,16">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button Content="CANCELAR"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        IsCancel="True"
                        Width="120"
                        Height="38"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
