<Window x:Class="CacelApp.Views.Modulos.Balanza.MantBalanza"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:CacelApp.Views.Modulos.Balanza"
        xmlns:form="clr-namespace:CacelApp.Shared.Controls.Form"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:loading="clr-namespace:CacelApp.Shared.Controls.Loading"
        Title="Mantenimiento Balanza"
        Height="750" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignCardBackground}"
        ResizeMode="CanResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Estilo para RadioButton como tarjeta de vehículo -->
        <Style x:Key="VehicleCardRadioButton" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" 
                                Background="{DynamicResource MaterialDesignCardBackground}" 
                                BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                BorderThickness="2"
                                CornerRadius="8"
                                Margin="6"
                                Cursor="Hand"
                                ClipToBounds="True">
                            <Grid>
                                <!-- Imagen de fondo que cubre todo -->
                                <Image Source="{Binding ImagenUrl}" 
                                      Stretch="Uniform"
                                      Opacity="0.9"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>

                                <!-- Overlay con gradiente para mejorar legibilidad -->
                                <Border Background="Black" Opacity="0.15"/>

                                <!-- Overlay de selección -->
                                <Border x:Name="SelectedOverlay" 
                                        Background="{StaticResource AppPrimaryBrush}"
                                        Opacity="0"/>

                                <!-- Contenido sobre la imagen -->
                                <Grid Margin="12">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Precio en la parte inferior -->
                                    <Border Grid.Row="2"
                                           Background="{DynamicResource MaterialDesignCardBackground}"
                                           CornerRadius="6"
                                           Padding="10,6"
                                           HorizontalAlignment="Center">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Precio, StringFormat='S/ {0:N0}'}" 
                                                     FontWeight="Bold"
                                                     FontSize="16"
                                                     Foreground="{DynamicResource MaterialDesignBody}"
                                                     HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding Nombre}" 
                                                     FontSize="11" 
                                                     FontWeight="SemiBold"
                                                     Foreground="{DynamicResource MaterialDesignBody}"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Trigger para cuando el RadioButton está seleccionado -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AppPrimaryBrush}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="5"/>
                                <Setter TargetName="SelectedOverlay" Property="Opacity" Value="0.25"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <materialDesign:DialogHost Identifier="MantBalanzaDialogHost"
                               CloseOnClickAway="False"
                               materialDesign:DialogHost.DialogContentTemplate="{StaticResource AppDialogTemplate}">
        <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <loading:LoadingOverlay Grid.RowSpan="3" Panel.ZIndex="99999" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <!-- Header con título -->
                <Border Grid.Row="0" Padding="20,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">

                            <materialDesign:PackIcon Kind="Scale" VerticalAlignment="Center"   Width="30"  Height="30" Foreground="{DynamicResource MaterialDesignBody}"/>
                            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="10,0" >
                                <TextBlock Text="Balanza Electrónica"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource MaterialDesignBody}"
                                   VerticalAlignment="Center"/>

                                <TextBlock Text="Todos los campos con (*) son obligatorios."
                                   Foreground="Red" FontWeight="Bold"
                                   FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <Border Grid.Column="2" 
                          BorderBrush="{StaticResource AppPrimaryBrush}" 
                          BorderThickness="1"
                          CornerRadius="8"
                          Padding="20,10"
                          VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="N° Ticket:" 
                                     FontWeight="SemiBold"
                                     FontSize="14"
                                     Foreground="{DynamicResource MaterialDesignBody}"
                                     VerticalAlignment="Center"
                                     Margin="0,0,15,0"/>
                                <TextBlock Text="{Binding Baz_des, TargetNullValue='- - -'}" 
                                     FontSize="24"
                                     FontWeight="Bold"
                                     Foreground="{StaticResource AppPrimaryBrush}"
                                     VerticalAlignment="Center"
                                     MinWidth="100"
                                     TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Toolbar con botones de acción -->
                <Border Grid.Row="1"  BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1" Padding="20,12">
                    <StackPanel Orientation="Horizontal">
                        <form:CustomButton Command="{Binding NuevoCommand}"
                                       Variant="Add"
                                       Text="Nuevo"
                                       Margin="0,0,10,0" IsOutlined="True"/>

                        <form:CustomButton Command="{Binding DestareCommand}"
                                       Variant="Custom"
                                       Text="Destare"
                                       IconKind="ScaleBalance"
                                       BackgroundColor="#00ACC1"
                                       Margin="0,0,10,0"/>

                        <form:CustomButton Command="{Binding CancelarCommand}"
                                       Variant="Close"
                                       Text="Cancelar"
                                       Margin="0,0,10,0"/>

                        <form:CustomButton Command="{Binding GuardarCommand}"
                                       Variant="Save"
                                       Text="{Binding TextoBotonGuardar}"
                                       IsEnabled="{Binding PuedeGuardar}"
                                       Margin="0,0,10,0"/>

                        <form:CustomButton Command="{Binding ImprimirCommand}"
                                       Variant="Print"
                                       Text="Imprimir"                                      
                                       IsEnabled="{Binding PuedeImprimir}"       
                                       Margin="0,0,10,0"/>

                        <form:CustomButton Command="{Binding CerrarCommand}"
                                       Variant="Custom"
                                       Text="Salir"
                                       IconKind="ExitToApp"      
                                       IsOutlined="True" />
                    </StackPanel>
                </Border>

                <!-- Content Principal con ScrollViewer a nivel de ventana -->
                <ScrollViewer Grid.Row="2" 
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Fila Superior: Vehículos -->
                        <Border Grid.Row="0"                            
                            BorderBrush="{DynamicResource MaterialDesignDivider}" 
                            BorderThickness="0,0,0,2">
                            <ItemsControl ItemsSource="{Binding Vehiculos}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <RadioButton GroupName="Vehiculos" 
                                               IsChecked="{Binding EstaSeleccionado, Mode=TwoWay}"
                                               Style="{StaticResource VehicleCardRadioButton}"
                                               Width="195"
                                               Height="140"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>

                        <!-- Fila Inferior: Formulario -->
                        <Grid Grid.Row="1" Margin="30,20,30,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="11*"/>
                                <RowDefinition Height="163*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Columna 1 -->
                            <Border Grid.Column="0" 
                                Background="{DynamicResource MaterialDesignCardBackground}" 
                                BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                BorderThickness="1" 
                                CornerRadius="12" 
                                Padding="20"
                                Margin="5,5,5,5" Grid.RowSpan="2">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" 
                                                Opacity="0.1" 
                                                BlurRadius="10" 
                                                ShadowDepth="2" 
                                                Direction="270"/>
                                </Border.Effect>
                                <StackPanel>
                                    <!-- Placa y Cliente -->
                                    <form:FormField Label="Placa *" 
                                                Value="{Binding Baz_veh_id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                IsEnabled="{Binding PuedeEditarPlaca}"
                                                MaxLength="8"
                                                Margin="0,0,0,14"/>

                                    <form:FormField Label="Cliente" 
                                                Value="{Binding Baz_ref, Mode=TwoWay}"
                                                Margin="0,0,0,16"/>

                                    <!-- Operación -->
                                    <form:FormRadioGroup Label="Operación" 
                                                     Value="{Binding Baz_tipo}"
                                                     Options="{Binding TiposOperacion}"
                                                     Margin="0,0,0,16" Foreground="{DynamicResource MaterialDesignBody}">
                                    </form:FormRadioGroup>

                                    <Separator Margin="0,0,0,16" Background="{DynamicResource MaterialDesignDivider}"/>

                                    <!-- Tipo Pago y Monto -->
                                    <form:FormComboBox Label="Tipo Pago" 
                                                   Required="True"
                                                   Options="{Binding TiposPago}"
                                                   Value="{Binding Baz_t1m_id, Mode=TwoWay}"
                                                   Margin="0,0,0,14"/>

                                    <form:FormField Label="Monto (S/)" 
                                                Value="{Binding Baz_monto, Mode=TwoWay, StringFormat=N2}"
                                                IsReadOnly="True"
                                                Margin="0,0,0,16"/>

                                    <Separator Margin="0,0,0,16" Background="{DynamicResource MaterialDesignDivider}"/>

                                    <!-- Observaciones -->
                                    <!-- Observaciones -->
                                    <form:FormField Label="Observaciones" 
                                                Value="{Binding Baz_obs, Mode=TwoWay}"
                                                Variant="TextArea"
                                                MinHeight="100"
                                                MaxHeight="150"
                                                HelperText="Ingrese observaciones adicionales"/>
                                </StackPanel>
                            </Border>

                            <!-- Columna 2 -->
                            <Border Grid.Column="2" 
                                Background="{DynamicResource MaterialDesignCardBackground}" 
                                BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                BorderThickness="1" 
                                CornerRadius="12" 
                                Padding="20"
                                Margin="5,5,5,5" Grid.RowSpan="2">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" 
                                                Opacity="0.1" 
                                                BlurRadius="10" 
                                                ShadowDepth="2" 
                                                Direction="270"/>
                                </Border.Effect>
                                <StackPanel>
                                    <!-- Datos del Transportista -->
                                    <TextBlock Text="Datos del Transportista" 
                                     FontWeight="SemiBold" 
                                     FontSize="13" 
                                     Margin="0,0,0,8"
                                     Foreground="{DynamicResource MaterialDesignBody}"/>

                                    <form:FormField Label="Nombre / Razón Social" 
                                                Value="{Binding NombreTransportista, Mode=TwoWay}"
                                                Margin="0,0,0,14"/>
                                    <form:FormField Label="Dni / Ruc" 
                                                Value="{Binding DniRucTransportista, Mode=TwoWay}"
                                                Margin="0,0,0,14"/>

                                    <form:FormField Label="Licencia" 
                                                Value="{Binding Licencia, Mode=TwoWay}"
                                                Margin="0,0,0,14"/>
                                    <form:FormField Label="Doc. Referencia/Guía/Otros" 
                                                Value="{Binding Baz_doc, Mode=TwoWay}"
                                                Margin="0,0,0,14"/>

                                    <form:FormField Label="Conductor" 
                                                Value="{Binding Conductor, Mode=TwoWay}"
                                                Visibility="{Binding MostrarConductor, Converter={StaticResource BoolToVis}}"
                                                Margin="0,0,0,14"/>

                                    <form:FormField Label="Whatsapp Cliente" 
                                                Value="{Binding WhatsAppCliente, Mode=TwoWay}"
                                                Margin="0,0,0,14"/>

                                    <Separator Margin="0,0,0,16" Background="{DynamicResource MaterialDesignDivider}"/>

                                    <!-- SUNAT -->
                                    <form:FormRadioGroup Label="Comprobante SUNAT" 
                                                     Value="{Binding Baz_t10}"
                                                     Options="{Binding TiposComprobante}"
                                                     Margin="0,0,0,16">
                                    </form:FormRadioGroup>

                                    <form:FormField Label="Dni / Ruc" 
                                                Value="{Binding NumDocumentoSunat, Mode=TwoWay}"
                                                IsEnabled="{Binding RequiereDocumentoSunat}"/>
                                </StackPanel>
                            </Border>

                            <!-- Columna 3 - Pesos Prioritarios -->
                            <Border Grid.Column="4"    
                                Background="{DynamicResource MaterialDesignCardBackground}" 
                                BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                BorderThickness="2" 
                                CornerRadius="12" 
                                Padding="20,10,20,20"
                                Margin="0,5,0,0" Grid.RowSpan="2">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" 
                                                Opacity="0.1" 
                                                BlurRadius="10" 
                                                ShadowDepth="2" 
                                                Direction="270"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="Pesos" 
                                     FontWeight="SemiBold" 
                                     FontSize="13"
                                     Margin="0,0,0,8"
                                     Foreground="{StaticResource AppPrimaryBrush}"
                                     HorizontalAlignment="Center"/>

                                    <!-- Peso en Vivo -->
                                    <Border Background="{DynamicResource MaterialDesignCardBackground}" 
                                            BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                            BorderThickness="1" 
                                            CornerRadius="6" 
                                            Padding="12,10"
                                            Margin="0,0,0,12">
                                        <StackPanel>
                                            <TextBlock Text="PESAJE EN VIVO (KG)" 
                                                     FontWeight="Bold" 
                                                     FontSize="11"
                                                     Foreground="{DynamicResource MaterialDesignBody}"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,0,0,8"/>

                                            <TextBlock Text="Peso Actual (KG)" 
                                                     FontSize="9"
                                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,0,0,6"/>

                                            <!-- Animación de peso -->
                                            <Border Background="#F5F7FA" 
                                                    BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                                    BorderThickness="1" 
                                                    CornerRadius="4" 
                                                    Padding="15,12"
                                                    Margin="0,0,0,8">
                                                <Grid HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding PesoBalanza, StringFormat='N2', TargetNullValue='- - -'}" 
                                                             FontSize="28" 
                                                             FontWeight="Bold" 
                                                             Foreground="{DynamicResource AppPrimaryBrush}"
                                                             HorizontalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </StackPanel>
                                    </Border>

                                    <StackPanel Margin="0,0,0,12" Orientation="Vertical">
                                        <!-- Peso Bruto -->
                                        <Border Background="{DynamicResource MaterialDesignCardBackground}" 
                                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                    BorderThickness="2" 
                                                    CornerRadius="6" 
                                                    Padding="12,8"
                                                    Margin="0,0,0,8">
                                            <form:FormField Label="Bruto (KG)" 
                                                                Value="{Binding Baz_pb, Mode=TwoWay, StringFormat=N2}"
                                                                IsReadOnly="True"/>
                                        </Border>

                                        <!-- Peso Tara -->
                                        <Border Background="{DynamicResource MaterialDesignCardBackground}" 
                                            BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                                    BorderThickness="2" 
                                                    CornerRadius="6" 
                                                    Padding="12,8"
                                                    Margin="0,0,0,8">
                                            <form:FormField Label="Tara (KG)" 
                                                                Value="{Binding Baz_pt, Mode=TwoWay, StringFormat=N2}"
                                                                IsReadOnly="True"/>
                                        </Border>

                                        <!-- Peso Neto -->
                                        <Border Background="{DynamicResource MaterialDesignCardBackground}" 
                                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                    BorderThickness="2" 
                                                    CornerRadius="6" 
                                                    Padding="12,8">
                                            <form:FormField Label="Neto (KG)" 
                                                                Value="{Binding Baz_pn, Mode=TwoWay, StringFormat=N2}"
                                                                IsReadOnly="True"/>
                                        </Border>
                                    </StackPanel>

                                    <form:CustomButton Command="{Binding CapturarPesoCommand}"
                                                           Variant="Custom"
                                                           Text="Capturar Peso"
                                                           IconKind="Camera"
                                                           BackgroundColor="#4CAF50"
                                                           Margin="0,0,0,8"/>

                                    <form:CustomButton Command="{Binding MostrarImagenesCommand}"
                                                           Variant="Secondary"
                                                           Text="Ver Imágenes"
                                                           IconKind="Image"
                                                           IsEnabled="{Binding TieneFotos}"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Border>
    </materialDesign:DialogHost>
</Window>
