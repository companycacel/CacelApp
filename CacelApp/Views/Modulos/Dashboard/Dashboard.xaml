<UserControl x:Class="CacelApp.Views.Modulos.Dashboard.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:CacelApp.Views.Modulos.Dashboard"
             xmlns:converters="clr-namespace:CacelApp.Config.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000"
             Background="{DynamicResource MaterialDesignPaper}">


    <Grid Margin="10,0,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Dashboard"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,0,0,15"
                   Foreground="{DynamicResource MaterialDesignBody}"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">

                <TextBlock FontSize="18" FontWeight="SemiBold" Margin="0,0,0,5">
                    <Run Text="¡Bienvenido de nuevo, "/>
                    <Run Text="{Binding DataContext.UsuarioNombreCompleto, RelativeSource={RelativeSource AncestorType=Window}}" FontWeight="Bold"/>
                    <Run Text="!"/>
                </TextBlock>
                <TextBlock Text="Aquí tienes un resumen del estado de tu sistema."
                           FontSize="14"
                           Opacity="0.8"
                           Margin="0,0,0,30"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,20,0">

                        <materialDesign:Card Margin="0,0,0,20">
                            <StackPanel Margin="15">
                                <TextBlock Text="Estado de Balanzas"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

                                <ItemsControl ItemsSource="{Binding Balanzas}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <materialDesign:Card Width="250" Margin="0,0,15,0" Padding="10">
                                                <StackPanel Orientation="Vertical">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                                        <materialDesign:PackIcon Kind="{Binding IconKind}" 
                                                         Width="20" Height="20" 
                                                         Foreground="#E53935" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding Name}" 
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center"/>

                                                        <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Right" 
                                            VerticalAlignment="Center"
                                            Margin="5,0,0,0">
                                                            <Ellipse Width="8" Height="8" 
                                                 Fill="{Binding IsOnline, Converter={StaticResource BoolToGreenRedConverter}}"
                                                 Margin="0,0,5,0" VerticalAlignment="Center"/>      
                                                            <TextBlock Text="{Binding StatusText}" 
                                               Opacity="0.7"
                                               FontSize="11"/>
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <Border Background="Black" 
                                                            Height="50" 
                                                            CornerRadius="3"
                                                            Margin="0,5,0,0">
                                                        <TextBlock HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center"
                                                                   FontSize="28"
                                                                   FontWeight="Bold"
                                                                   Text="{Binding DisplayWeight}">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Foreground" Value="Red"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsOnline}" Value="True">
                                                                            <Setter Property="Foreground" Value="LimeGreen"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Border>
                                                </StackPanel>
                                            </materialDesign:Card>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </materialDesign:Card>
                        <materialDesign:Card>
                            <StackPanel Margin="15">
                                <TextBlock Text="Estado de Cámaras"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Margin="0,0,0,10"/>

                                <ItemsControl ItemsSource="{Binding CamaraStatus}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <materialDesign:Card Width="250" Margin="0,0,15,0">
                                                <StackPanel Orientation="Vertical" Margin="10">
                                                    <materialDesign:PackIcon Kind="Video" 
                                                                             Width="30" Height="30" 
                                                                             Foreground="#E53935" Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Ellipse Width="8" Height="8" 
                                                                 Fill="{Binding IsOnline, Converter={StaticResource BoolToGreenRedConverter}}"
                                                                 Margin="0,0,5,0" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding StatusText}" 
                                                                   Opacity="0.7"
                                                                   FontSize="11"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </materialDesign:Card>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </materialDesign:Card>
                        
                        <!-- Sección de Streaming de Cámaras -->

                        <!-- Sección de Streaming de Cámaras -->
                        <materialDesign:Card Margin="0,20,0,0">
                            <StackPanel Margin="15">
                                <TextBlock Text="Transmisión en Vivo - Cámaras"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Margin="0,0,0,10"/>

                                <ItemsControl ItemsSource="{Binding CameraStreams}" x:Name="CameraStreamsControl">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="2" Rows="2"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                                    BorderThickness="1" 
                                                    Margin="5"
                                                    CornerRadius="4"
                                                    Cursor="Hand">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Black"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                <Setter Property="BorderBrush" Value="#4F46E5"/>
                                                                <Setter Property="BorderThickness" Value="3"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Border.InputBindings>
                                                    <MouseBinding MouseAction="LeftClick" 
                                                                  Command="{Binding DataContext.SeleccionarCamaraCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                  CommandParameter="{Binding}"/>
                                                </Border.InputBindings>

                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Header con nombre de cámara -->
                                                    <Border Grid.Row="0" Background="#1F1F1F" Padding="8,4">
                                                        <StackPanel Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="Video" 
                                                                                     Width="16" Height="16" 
                                                                                     Foreground="White" 
                                                                                     VerticalAlignment="Center"
                                                                                     Margin="0,0,5,0"/>
                                                            <TextBlock Text="{Binding Nombre}" 
                                                                       Foreground="White" 
                                                                       FontSize="12"
                                                                       FontWeight="SemiBold"
                                                                       VerticalAlignment="Center"/>
                                                            <Ellipse Width="8" Height="8" 
                                                                     Margin="8,0,0,0"
                                                                     VerticalAlignment="Center">
                                                                <Ellipse.Style>
                                                                    <Style TargetType="Ellipse">
                                                                        <Setter Property="Fill" Value="Red"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsStreaming}" Value="True">
                                                                                <Setter Property="Fill" Value="LimeGreen"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Ellipse.Style>
                                                            </Ellipse>
                                                        </StackPanel>
                                                    </Border>

                                                    <!-- Contenedor para el video -->
                                                    <Border Grid.Row="1" 
                                                            Background="Black" 
                                                            Margin="0"
                                                            x:Name="CameraHostContainer"
                                                            Tag="{Binding Canal}">
                                                        <!-- WindowsFormsHost con PictureBox se agregará dinámicamente en code-behind -->
                                                    </Border>

                                                    <!-- Overlay cuando no hay streaming -->
                                                    <Border Grid.Row="1" Background="#AA000000"
                                                            Visibility="{Binding IsStreaming, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                            <materialDesign:PackIcon Kind="VideoOff" 
                                                                                     Width="48" Height="48" 
                                                                                     Foreground="White"
                                                                                     HorizontalAlignment="Center"/>
                                                            <TextBlock Text="Sin señal" 
                                                                       Foreground="White" 
                                                                       FontSize="14"
                                                                       Margin="0,8,0,0"
                                                                       HorizontalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>

                   
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
