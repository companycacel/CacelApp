<UserControl x:Class="CacelApp.Views.Modulos.Dashboard.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:CacelApp.Views.Modulos.Dashboard"
             xmlns:converters="clr-namespace:CacelApp.Config.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000"
             Background="{DynamicResource MaterialDesignPaper}">
    <d:DesignData.DataContext>
        <local:DashboardModel/>
    </d:DesignData.DataContext>

    <Grid Margin="10,0,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Dashboard"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,0,0,15"
                   Foreground="{DynamicResource MaterialDesignBody}"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">

                <TextBlock FontSize="18" FontWeight="SemiBold" Margin="0,0,0,5">
                    <Run Text="¡Bienvenido de nuevo, "/>
                    <Run Text="{Binding DataContext.UsuarioNombreCompleto, RelativeSource={RelativeSource AncestorType=Window}}" FontWeight="Bold"/>
                    <Run Text="!"/>
                </TextBlock>
                <TextBlock Text="Aquí tienes un resumen del estado de tu sistema."
                           FontSize="14"
                           Opacity="0.8"
                           Margin="0,0,0,30"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,20,0">

                        <materialDesign:Card Margin="0,0,0,20">
                            <StackPanel Margin="15">
                                <TextBlock Text="Estado de Balanzas"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

                                <ItemsControl ItemsSource="{Binding Balanzas}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <materialDesign:Card Width="250" Margin="0,0,15,0" Padding="10">
                                                <StackPanel Orientation="Vertical">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                                        <materialDesign:PackIcon Kind="{Binding IconKind}" 
                                                         Width="20" Height="20" 
                                                         Foreground="#E53935" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding Name}" 
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center"/>

                                                        <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Right" 
                                            VerticalAlignment="Center"
                                            Margin="5,0,0,0">
                                                            <Ellipse Width="8" Height="8" 
                                                 Fill="{Binding IsOnline, Converter={StaticResource BoolToGreenRedConverter}}"
                                                 Margin="0,0,5,0" VerticalAlignment="Center"/>      
                                                            <TextBlock Text="{Binding StatusText}" 
                                               Opacity="0.7"
                                               FontSize="11"/>
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <Border Background="Black" 
                                    Height="50" 
                                    CornerRadius="3"
                                    Margin="0,5,0,0">
                                                        <TextBlock HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           FontSize="28"
                                           FontWeight="Bold">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Foreground" Value="Red"/>
                                                                    <Setter Property="Text" Value="---"/>

                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding CurrentWeight}" Value="0">
                                                                            <Setter Property="Text" Value="---"/>
                                                                            <Setter Property="Foreground" Value="Red"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding IsWeightCaptured}" Value="True">
                                                                            <Setter Property="Text" Value="{Binding DisplayWeight}"/>
                                                                            <Setter Property="Foreground" Value="LimeGreen"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Border>
                                                </StackPanel>
                                            </materialDesign:Card>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </materialDesign:Card>
                        <materialDesign:Card>
                            <StackPanel Margin="15">
                                <TextBlock Text="Estado de Cámaras"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Margin="0,0,0,10"/>

                                <ItemsControl ItemsSource="{Binding CamaraStatus}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <materialDesign:Card Width="250" Margin="0,0,15,0">
                                                <StackPanel Orientation="Vertical" Margin="10">
                                                    <materialDesign:PackIcon Kind="Video" 
                                                                             Width="30" Height="30" 
                                                                             Foreground="#E53935" Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Ellipse Width="8" Height="8" 
                                                                 Fill="{Binding IsOnline, Converter={StaticResource BoolToGreenRedConverter}}"
                                                                 Margin="0,0,5,0" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding StatusText}" 
                                                                   Opacity="0.7"
                                                                   FontSize="11"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </materialDesign:Card>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">

                        <materialDesign:Card Margin="0,0,0,10">
                            <Grid Margin="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Grid.Column="0" Kind="CubeSend" 
                                                         Width="30" Height="70"
                                                         Foreground="#3F51B5" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Pesajes Hoy" Opacity="0.7"/>
                                    <TextBlock Text="{Binding PesajesHoy}" FontSize="24" FontWeight="Bold"/>
                                </StackPanel>
                            </Grid>
                        </materialDesign:Card>

                        <materialDesign:Card Margin="0,0,0,10">
                            <Grid Margin="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Grid.Column="0" Kind="ChartAreaspline" 
                                                         Width="30" Height="70"
                                                         Foreground="#009688" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Producción del Mes" Opacity="0.7"/>
                                    <TextBlock Text="{Binding ProduccionMes}" FontSize="24" FontWeight="Bold"/>
                                </StackPanel>
                            </Grid>
                        </materialDesign:Card>

                        <materialDesign:Card>
                            <Grid Margin="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Grid.Column="0" Kind="CheckCircleOutline" 
                                                         Width="30" Height="70"
                                                         Foreground="#4CAF50" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Estado del Sistema" Opacity="0.7"/>
                                    <TextBlock Text="{Binding SistemaStatus}" FontSize="24" FontWeight="Bold"/>
                                </StackPanel>
                            </Grid>
                        </materialDesign:Card>

                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
