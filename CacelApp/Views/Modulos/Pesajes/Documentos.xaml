<Window x:Class="CacelApp.Views.Modulos.Pesajes.Documentos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Buscar Documento"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource MaterialDesignWindow}"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="BUSCAR DOCUMENTO"
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Margin="0,0,0,20"/>

        <!-- Búsqueda -->
        <TextBox Grid.Row="1"
                 Text="{Binding FiltroBusqueda, UpdateSourceTrigger=PropertyChanged}"
                 materialDesign:HintAssist.Hint="Buscar por documento o material..."
                 materialDesign:TextFieldAssist.HasClearButton="True"
                 materialDesign:TextFieldAssist.LeadingIcon="Magnify"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Margin="0,0,0,20"/>

        <!-- DataGrid de Documentos -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding DocumentosFiltrados}"
                  SelectedItem="{Binding DocumentoSeleccionado}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  materialDesign:DataGridAssist.CellPadding="12,8"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="12,10"
                  Margin="0,0,0,20">

            <DataGrid.Columns>
                <!-- Documento -->
                <DataGridTextColumn Header="DOCUMENTO"
                                    Binding="{Binding mde_mov_des}"
                                    Width="2*"/>

                <!-- Material -->
                <DataGridTextColumn Header="MATERIAL"
                                    Binding="{Binding mde_bie_des}"
                                    Width="3*"/>

                <!-- Diferencia -->
                <DataGridTextColumn Header="DIFERENCIA"
                                    Binding="{Binding mde_df, StringFormat=N2}"
                                    Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>

            <!-- Doble clic para seleccionar -->
            <DataGrid.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick"
                              Command="{Binding SeleccionarCommand}"/>
            </DataGrid.InputBindings>
        </DataGrid>

        <!-- Botones -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="CANCELAR"
                    Command="{Binding CancelarCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,10,0"
                    Width="120"/>

            <Button Content="SELECCIONAR"
                    Command="{Binding SeleccionarCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="140"/>
        </StackPanel>
    </Grid>
</Window>
