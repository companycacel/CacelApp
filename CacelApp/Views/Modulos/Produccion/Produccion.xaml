<UserControl x:Class="CacelApp.Views.Modulos.Produccion.Produccion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:CacelApp.Views.Modulos.Produccion"
             xmlns:controls="clr-namespace:CacelApp.Shared.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400" MinWidth="800"
             d:DataContext="{d:DesignInstance Type=local:ProduccionModel, IsDesignTimeCreatable=False}"
             Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.Resources>
        <!-- Template para columna de Estado -->
        <DataTemplate x:Key="EstadoTemplate">
            <Border CornerRadius="3" Padding="8,4" HorizontalAlignment="Center">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Item.pde_status}" Value="1">
                                <Setter Property="Background" Value="#E8F5E9"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Item.pde_status}" Value="2">
                                <Setter Property="Background" Value="#FFF3E0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock Text="{Binding Item.pde_status_des}" 
                           FontSize="11" 
                           FontWeight="SemiBold">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Item.pde_status}" Value="1">
                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Item.pde_status}" Value="2">
                                    <Setter Property="Foreground" Value="#EF6C00"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabecera -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryMidBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <TextBlock Text="Módulo de Producción"
                               FontSize="28"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Gestión de registros de producción y materiales"
                               FontSize="13"                               
                               Opacity="0.9"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                        <TextBlock Text="Total Registros" FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        <TextBlock Text="{Binding TotalRegistros}" FontSize="18" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filtros y Botones -->
        <Border Grid.Row="1" 
                Background="{DynamicResource MaterialDesignCardBackground}" 
                BorderBrush="{DynamicResource MaterialDesignDividerBrush}"
                BorderThickness="0,1,0,1"
                Padding="20" 
                CornerRadius="8,8,0,0">
            <StackPanel>
                <TextBlock Text="Filtros de Búsqueda" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,15"
                           Foreground="{DynamicResource MaterialDesignBody}"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Filtros -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <!-- Filtro Fecha Inicio -->
                        <StackPanel Margin="0,0,15,0">
                            <TextBlock Text="Desde" FontSize="11" Margin="0,0,0,5" Foreground="{DynamicResource MaterialDesignBody}"/>
                            <DatePicker SelectedDate="{Binding FechaInicio, Mode=TwoWay}"
                                       Width="140"
                                       materialDesign:HintAssist.Hint="Fecha inicio"
                                       Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
                        </StackPanel>

                        <!-- Filtro Fecha Fin -->
                        <StackPanel Margin="0,0,15,0">
                            <TextBlock Text="Hasta" FontSize="11" Margin="0,0,0,5" Foreground="{DynamicResource MaterialDesignBody}"/>
                            <DatePicker SelectedDate="{Binding FechaFin, Mode=TwoWay}"
                                       Width="140"
                                       materialDesign:HintAssist.Hint="Fecha fin"
                                       Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
                        </StackPanel>

                        <!-- Filtro Material -->
                        <StackPanel Margin="0,0,20,0">
                            <TextBlock Text="Material" FontSize="11" Margin="0,0,0,5" Foreground="{DynamicResource MaterialDesignBody}"/>
                            <ComboBox ItemsSource="{Binding Materiales}"
                                     SelectedItem="{Binding MaterialSeleccionado, Mode=TwoWay}"
                                     DisplayMemberPath="Label"
                                     Width="180"
                                     materialDesign:HintAssist.Hint="Seleccionar material"
                                     Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                            <Button Command="{Binding BuscarCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    materialDesign:ButtonAssist.CornerRadius="5"
                                    Background="{StaticResource MaterialDesign.Brush.Primary}"
                                    Padding="15,8" Margin="0,0,10,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Filter" Margin="0,0,8,0" VerticalAlignment="Center" Foreground="White"/>
                                    <TextBlock Text="Aplicar Filtros" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>

                            <Button Command="{Binding AgregarCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    materialDesign:ButtonAssist.CornerRadius="5"
                                    Padding="20,8">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Plus" Margin="0,0,8,0" VerticalAlignment="Center" Foreground="White"/>
                                    <TextBlock Text="Nuevo" VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <!-- Búsqueda (delegada al DataTableControl) -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <!-- El buscador está integrado en DataTableControl -->
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Tabla Reutilizable con Paginación Integrada -->
        <controls:DataTableControl 
            Grid.Row="2"
            DataContext="{Binding TableViewModel}"
            Columns="{Binding DataContext.TableColumns, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

    </Grid>
</UserControl>
