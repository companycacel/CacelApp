<Window x:Class="CacelApp.Views.Modulos.Produccion.RegistroRapidoProduccion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:CacelApp.Config.Converters"
        xmlns:loading="clr-namespace:CacelApp.Shared.Controls.Loading"
        mc:Ignorable="d"
        Title="Estación de Pesaje de Materiales" 
        Height="780" 
        Width="950"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <Window.Resources>
        <!-- CONVERSORES (ASUMIDOS) -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>

        <!-- VARIABLES DE COLOR (Simulando el CSS vivo) -->
        <!-- NOTA: Debes definir AppPrimaryBrush en tu App.xaml o recursos globales -->
        <SolidColorBrush x:Key="VivoPrimaryBrush" Color="#00A86B"/>
        <SolidColorBrush x:Key="VivoSecondaryBrush" Color="#007C4A"/>
        <SolidColorBrush x:Key="InputTaraBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="InputTaraForeground" Color="#92400E"/>
        <SolidColorBrush x:Key="NetoBackgroundBrush" Color="#D1FAE5"/>
        <SolidColorBrush x:Key="NetoForegroundBrush" Color="#065F46"/>

        <!-- ESTILO para botones de material (Copia la lógica del HTML) -->
        <Style x:Key="MaterialButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Height" Value="70"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="2"/>

            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>




        </Style>

        <!-- ESTILO para botones de empaque (Simulando el RadioButton con Template) -->
        <Style x:Key="PackingButton" TargetType="RadioButton" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Height" Value="55"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="2"/>

            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="#4B5563"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>

            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="{StaticResource VivoPrimaryBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource VivoSecondaryBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.5" Color="#00A86B"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource VivoPrimaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <loading:LoadingOverlay Grid.RowSpan="2" Panel.ZIndex="99999" 
                                Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" Loaded="LoadingOverlay_Loaded"/>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource VivoPrimaryBrush}"
                Padding="24,20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="ScaleBalance" 
                                         Width="32" 
                                         Height="32" 
                                         Foreground="White"
                                         VerticalAlignment="Center" 
                                         Margin="0,0,15,0"/>
                <TextBlock Text="Estación de Pesaje de Materiales"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="30,20">

            <StackPanel Margin="0,0,0,30">

                <!-- GRUPO PRINCIPAL: Materiales (Izq) & Visor (Der) -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <!-- 3/5 para Materiales -->
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="2*"/>
                        <!-- 2/5 para Visor -->
                    </Grid.ColumnDefinitions>

                    <!-- Columna 0 (Izquierda): 1. Material (Selección Rápida) -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="1. Material (Selección Rápida)"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#1F2937"
                                   Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <!-- Fila 1 -->
                            <Button Grid.Column="0" Style="{StaticResource MaterialButton}" Tag="PL" Background="#DBEAFE" BorderBrush="#3B82F6" Foreground="#1E40AF" Command="{Binding SeleccionarMaterialCommand}" CommandParameter="1">
                                <StackPanel>
                                    <TextBlock Text="PL" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Plata" FontSize="10" FontWeight="Normal" Margin="0,2,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Grid.Column="1" Style="{StaticResource MaterialButton}" Tag="CU" Background="#D1FAE5" BorderBrush="#10B981" Foreground="#065F46" Command="{Binding SeleccionarMaterialCommand}" CommandParameter="2">
                                <StackPanel>
                                    <TextBlock Text="CU" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Cobre" FontSize="10" FontWeight="Normal" Margin="0,2,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Grid.Column="2" Style="{StaticResource MaterialButton}" Tag="AL" Background="#FECDD3" BorderBrush="#F43F5E" Foreground="#9F1239" Command="{Binding SeleccionarMaterialCommand}" CommandParameter="3">
                                <StackPanel>
                                    <TextBlock Text="AL" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Aluminio" FontSize="10" FontWeight="Normal" Margin="0,2,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- Fila 2 -->
                            <Button Grid.Column="0" Grid.Row="1" Style="{StaticResource MaterialButton}" Tag="ZN" Background="#DBEAFE" BorderBrush="#3B82F6" Foreground="#1E40AF" Command="{Binding SeleccionarMaterialCommand}" CommandParameter="4">
                                <StackPanel>
                                    <TextBlock Text="ZN" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Zinc" FontSize="10" FontWeight="Normal" Margin="0,2,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Grid.Column="1" Grid.Row="1" Style="{StaticResource MaterialButton}" Tag="BR" Background="#FED7AA" BorderBrush="#F97316" Foreground="#9A3412" Command="{Binding SeleccionarMaterialCommand}" CommandParameter="5">
                                <StackPanel>
                                    <TextBlock Text="BR" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Bronce" FontSize="10" FontWeight="Normal" Margin="0,2,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Grid.Column="2" Grid.Row="1" Style="{StaticResource MaterialButton}" Tag="NI" Background="#FECDD3" BorderBrush="#F43F5E" Foreground="#9F1239" Command="{Binding SeleccionarMaterialCommand}" CommandParameter="6">
                                <StackPanel>
                                    <TextBlock Text="NI" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Níquel" FontSize="10" FontWeight="Normal" Margin="0,2,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Columna 2 (Derecha): 2. Visor de Peso -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="2. Visor de Peso (KG)"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#1F2937"
                                   Margin="0,0,0,10"/>

                        <!-- Visor de Peso (Estilo Digital Vivo) -->
                        <Border Background="#1F2937"
                                BorderBrush="#374151"
                                BorderThickness="2"
                                CornerRadius="12"
                                Padding="15"
                                MinHeight="154"
                                VerticalAlignment="Top">
                            <TextBlock Text="{Binding PesoActualVisor, StringFormat='0.00'}"
                                       FontSize="60"
                                       FontWeight="Bold"
                                       Foreground="#A7F3D0" 
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontFamily="Consolas"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- GRUPO DE CONTROL: Empaque (Izq) & Capturar (Der) -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <!-- 3/5 para Empaque -->
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="2*"/>
                        <!-- 2/5 para Capturar -->
                    </Grid.ColumnDefinitions>

                    <!-- Columna 0 (Izquierda): 3. Tipo de Empaque -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="3. Tipo de Empaque"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#1F2937"
                                   Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <RadioButton Grid.Column="0" Style="{StaticResource PackingButton}" GroupName="TipoEmpaque" Content="PACA" IsChecked="{Binding IsPacaChecked, Mode=TwoWay}" Command="{Binding SelectPackingCommand}" CommandParameter="PACA"/>
                            <RadioButton Grid.Column="1" Style="{StaticResource PackingButton}" GroupName="TipoEmpaque" Content="SACA" IsChecked="{Binding IsSacaChecked, Mode=TwoWay}" Command="{Binding SelectPackingCommand}" CommandParameter="SACA"/>
                            <RadioButton Grid.Column="2" Style="{StaticResource PackingButton}" GroupName="TipoEmpaque" Content="PALETA" IsChecked="{Binding IsPaletaChecked, Mode=TwoWay}" Command="{Binding SelectPackingCommand}" CommandParameter="PALETA"/>
                        </Grid>
                    </StackPanel>

                    <!-- Columna 2 (Derecha): Botón Capturar Peso -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Bottom">
                        <Button Height="55"
                                Background="#3B82F6"
                                BorderBrush="#2563EB"
                                BorderThickness="0"
                                Command="{Binding CapturarPesoCommand}"
                                Cursor="Hand"
                                Margin="0,20,0,0">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="12" ShadowDepth="3" Opacity="0.4" Color="#3B82F6"/>
                            </Button.Effect>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="Download" 
                                                         Width="24" 
                                                         Height="24" 
                                                         Foreground="White"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0"/>
                                <TextBlock Text="CAPTURAR PESO"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- 4. Resultados de Pesaje (Bruto, Tara, Neto) -->
                <Border Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="24"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="4. Resultados de Pesaje"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#1F2937"
                                   Margin="0,0,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Peso Bruto -->
                            <Border Grid.Column="0"
                                    Background="#F9FAFB"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0,0,8,0">
                                <StackPanel>
                                    <TextBlock Text="Peso Bruto" FontSize="12" Foreground="#6B7280" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding PesoBruto, StringFormat='0.00'}" FontSize="32" FontWeight="Bold" Foreground="#1F2937" HorizontalAlignment="Center"/>
                                    <TextBlock Text="KG" FontSize="14" Foreground="#6B7280" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Peso Tara (Manual) -->
                            <Border Grid.Column="1"
                                    Background="{StaticResource InputTaraBrush}"
                                    BorderBrush="#F59E0B"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="4,0">
                                <StackPanel>
                                    <TextBlock Text="Peso Tara (Manual)" FontSize="12" Foreground="{StaticResource InputTaraForeground}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding PesoTara, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='0.00'}"
                                             FontSize="32"
                                             FontWeight="Bold"
                                             Foreground="{StaticResource InputTaraForeground}"
                                             HorizontalAlignment="Center"
                                             TextAlignment="Center"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             Width="120"
                                             materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                             materialDesign:TextFieldAssist.UnderlineBrush="Transparent"/>
                                    <TextBlock Text="KG" FontSize="14" Foreground="{StaticResource InputTaraForeground}" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Peso Neto -->
                            <Border Grid.Column="2"
                                    Background="{StaticResource NetoBackgroundBrush}"
                                    BorderBrush="{StaticResource VivoPrimaryBrush}"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="8,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="PESO NETO" FontSize="12" FontWeight="Bold" Foreground="{StaticResource NetoForegroundBrush}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding PesoNeto, StringFormat='0.00'}" FontSize="32" FontWeight="Bold" Foreground="{StaticResource NetoForegroundBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="KG" FontSize="14" FontWeight="Bold" Foreground="{StaticResource NetoForegroundBrush}" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Botón Guardar Pesada -->
                <Button Height="60"
                        Background="{StaticResource VivoPrimaryBrush}"
                        BorderBrush="{StaticResource VivoSecondaryBrush}"
                        BorderThickness="0"
                        Command="{Binding GuardarCommand}"
                        Cursor="Hand"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        materialDesign:ButtonAssist.CornerRadius="10">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="12" ShadowDepth="3" Opacity="0.4" Color="#10B981"/>
                    </Button.Effect>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="ContentSave" 
                                                 Width="28" 
                                                 Height="28" 
                                                 Foreground="White"
                                                 VerticalAlignment="Center" 
                                                 Margin="0,0,12,0"/>
                        <TextBlock Text="GUARDAR PESADA"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>