<Window x:Class="CacelApp.Views.Modulos.Produccion.RegistroRapidoProduccion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:CacelApp.Config.Converters"
        xmlns:form="clr-namespace:CacelApp.Shared.Controls.Form"
        xmlns:loading="clr-namespace:CacelApp.Shared.Controls.Loading"
        mc:Ignorable="d"
        Title="Estación de Pesaje de Materiales" 
        Height="780" 
        Width="950"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <Window.Resources>
        <!-- CONVERSORES (ASUMIDOS) -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:EqualityConverter x:Key="EqualityConverter"/>
        <!-- VARIABLES DE COLOR (Simulando el CSS vivo) -->
        <!-- NOTA: Debes definir AppPrimaryBrush en tu App.xaml o recursos globales -->
        <SolidColorBrush x:Key="VivoPrimaryBrush" Color="#00A86B"/>
        <SolidColorBrush x:Key="VivoSecondaryBrush" Color="#007C4A"/>
        <SolidColorBrush x:Key="InputTaraBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="InputTaraForeground" Color="#92400E"/>
        <SolidColorBrush x:Key="NetoBackgroundBrush" Color="#D1FAE5"/>
        <SolidColorBrush x:Key="NetoForegroundBrush" Color="#065F46"/>

        <!-- ESTILO para botones de material (Copia la lógica del HTML) -->
        <Style x:Key="MaterialButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Height" Value="70"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="2"/>

            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ESTILO para botones de empaque (Simulando el RadioButton con Template) -->
        <Style x:Key="PackingButton" TargetType="RadioButton" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Height" Value="55"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="2"/>

            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="#4B5563"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>

            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="{StaticResource VivoPrimaryBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource VivoSecondaryBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.5" Color="#00A86B"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource VivoPrimaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--<loading:LoadingOverlay Grid.RowSpan="3" Panel.ZIndex="99999" 
                                Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" Loaded="LoadingOverlay_Loaded"/>-->

        <!-- Header -->
        <Border Grid.Row="0" 
                Padding="24,20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="ScaleBalance" 
                                         Width="32" 
                                         Height="32" 
                                          Foreground="{DynamicResource MaterialDesignBody}"
                                         VerticalAlignment="Center" 
                                         Margin="0,0,15,0"/>
                <TextBlock Text="Estación de Pesaje de Materiales"
                           FontSize="24"
                           FontWeight="Bold"
                            Foreground="{DynamicResource MaterialDesignBody}"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="20"
                      Background="{DynamicResource MaterialDesignPaper}">

            <StackPanel Margin="16,16,16,0">

                <!-- GRUPO PRINCIPAL: Materiales (Izq) & Visor (Der) -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <!-- 3/5 para Materiales -->
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="2*"/>
                        <!-- 2/5 para Visor -->
                    </Grid.ColumnDefinitions>

                    <!-- Columna 0 (Izquierda): 1. Material (Selección Rápida) -->
                    <StackPanel Grid.Column="0">
                        <Grid Margin="0,0,0,10">
                            <TextBlock Text="1. Material (Selección Rápida)"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#1F2937"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"/>
                            
                            <!-- Controles de Paginación -->
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center">
                                <Button Command="{Binding PaginaAnteriorCommand}"
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        Width="32" Height="32"
                                        Margin="0,0,4,0"
                                        ToolTip="Página anterior">
                                    <materialDesign:PackIcon Kind="ChevronLeft" Width="20" Height="20"/>
                                </Button>
                                
                                <TextBlock VerticalAlignment="Center"
                                           Margin="8,0">
                                    <Run Text="{Binding PaginaActual, Mode=OneWay}"/>
                                    <Run Text="/"/>
                                    <Run Text="{Binding TotalPaginas, Mode=OneWay}"/>
                                </TextBlock>
                                
                                <Button Command="{Binding PaginaSiguienteCommand}"
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        Width="32" Height="32"
                                        Margin="4,0,0,0"
                                        ToolTip="Página siguiente">
                                    <materialDesign:PackIcon Kind="ChevronRight" Width="20" Height="20"/>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <!-- ItemsControl para materiales dinámicos -->
                        <ItemsControl ItemsSource="{Binding MaterialesPaginados}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="2" Columns="3"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.SeleccionarMaterialCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                        CommandParameter="{Binding Value}"
                                        Tag="{Binding Value}">
                                        <Button.Background>
                                            <SolidColorBrush Color="{Binding Ext.Color, FallbackValue=#DBEAFE}"/>
                                        </Button.Background>
                                        <Button.BorderBrush>
                                            <SolidColorBrush Color="{Binding Ext.Color, FallbackValue=#3B82F6}"/>
                                        </Button.BorderBrush>

                                        <!-- Style con trigger para resaltar seleccionado -->
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource MaterialButton}">
                                                <Style.Triggers>
                                                    <DataTrigger Value="True">
                                                        <DataTrigger.Binding>
                                                            <MultiBinding Converter="{StaticResource EqualityConverter}">
                                                                <Binding Path="Value"/>
                                                                <Binding Path="DataContext.MaterialSeleccionado" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                            </MultiBinding>
                                                        </DataTrigger.Binding>
                                                        <Setter Property="BorderThickness" Value="3"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource VivoPrimaryBrush}"/>
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect BlurRadius="16" ShadowDepth="0.1" Opacity="0.7" Color="#3B82F6"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>

                                        <StackPanel>
                                            <TextBlock Text="{Binding Ext.Codigo, FallbackValue=''}" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding Label}" 
                                               FontSize="10" 
                                               FontWeight="Normal" 
                                               Margin="0,2,0,0" 
                                               HorizontalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip="{Binding Label}"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Columna 2 (Derecha): 2. Visor de Peso -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="2. Visor de Peso (KG)"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#1F2937"
                                   Margin="0,0,0,10"/>

                        <!-- Visor de Peso (Estilo Estándar) -->
                        <Border Background="#F9FAFB"
                                BorderBrush="#E5E7EB"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16,12"
                                MinHeight="154"
                                VerticalAlignment="Top">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding PesoActual, StringFormat='0.00', TargetNullValue='0.00'}"
                                           FontSize="48"
                                           FontWeight="Bold"
                                           Foreground="#10B981"
                                           HorizontalAlignment="Center"
                                           FontFamily="Consolas"/>
                                <TextBlock Text="KG | ESTADO: LISTO"
                                           FontSize="10"
                                           Foreground="#6B7280"
                                           HorizontalAlignment="Center"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- GRUPO DE CONTROL: Empaque (Izq) & Capturar (Der) -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <!-- 3/5 para Empaque -->
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="2*"/>
                        <!-- 2/5 para Capturar -->
                    </Grid.ColumnDefinitions>

                    <!-- Columna 0 (Izquierda): 3. Unidad de Medida -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="3. Unidad de Medida"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#1F2937"
                                   Margin="0,0,0,10"/>

                        <ItemsControl ItemsSource="{Binding UnidadesMedida}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"
                                       ItemHeight="70"
                                       ItemWidth="120"
                                       Margin="0,5,0,0"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <RadioButton GroupName="UnidadMedida"
                                     Content="{Binding Label}"
                                     Tag="{Binding Value}"
                                     Checked="UnidadMedida_Checked"
                                     Style="{StaticResource PackingButton}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Columna 2 (Derecha): Botón Capturar Peso -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Bottom">
                        <form:CustomButton Command="{Binding CapturarPesoCommand}"
                           Variant="Primary"
                           Height="50"
                           Text="Capturar Peso" Margin="0,0,0,8"/>
                    </StackPanel>
                </Grid>

                <!-- 4. Resultados de Pesaje (Bruto, Tara, Neto) -->
                <Border Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="24"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="4. Resultados de Pesaje"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#1F2937"
                                   Margin="0,0,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Peso Bruto -->
                            <Border Grid.Column="0"
                                    Background="#F9FAFB"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0,0,8,0">
                                <StackPanel>
                                    <TextBlock Text="PESO BRUTO" FontSize="12" Foreground="#6B7280" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding PesoBruto, StringFormat='0.00'}" FontSize="20" FontWeight="Bold" Foreground="#1F2937" HorizontalAlignment="Center"/>
                                    <TextBlock Text="KG" FontSize="14" Foreground="#6B7280" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Peso Tara (Manual) -->
                            <Border Grid.Column="1"
                                    Background="{StaticResource InputTaraBrush}"
                                    BorderBrush="#F59E0B"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="4,0">
                                <StackPanel>
                                    <TextBlock Text="PESO TARA (Manual)" FontSize="12" Foreground="{StaticResource InputTaraForeground}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding PesoTara, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat='0.00'}"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             Foreground="{StaticResource InputTaraForeground}"
                                             HorizontalAlignment="Center"
                                             TextAlignment="Center"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             Width="120"
                                             materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                             materialDesign:TextFieldAssist.UnderlineBrush="Transparent"/>
                                    <TextBlock Text="KG" FontSize="14" Foreground="{StaticResource InputTaraForeground}" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Peso Neto -->
                            <Border Grid.Column="2"
                                    Background="{StaticResource NetoBackgroundBrush}"
                                    BorderBrush="{StaticResource VivoPrimaryBrush}"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="8,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="PESO NETO" FontSize="12" FontWeight="Bold" Foreground="{StaticResource NetoForegroundBrush}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding PesoNeto, StringFormat='0.00'}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource NetoForegroundBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="KG" FontSize="14" FontWeight="Bold" Foreground="{StaticResource NetoForegroundBrush}" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Botones de Acción al Final (Footer) -->
        <Border Grid.Row="2" 
                Background="{DynamicResource MaterialDesignCardBackground}"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="0,1,0,0"
                Padding="20,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                <form:CustomButton Command="{Binding CancelarCommand}"
                                   Variant="Close"
                                   Height="38"
                                   Margin="0,0,12,0" 
                                   Text="Cancelar"/>

                <form:CustomButton Command="{Binding GuardarCommand}"
                                   Variant="Save"
                                   Height="38"
                                   Text="Guardar Pesada"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>