<UserControl x:Class="CacelApp.Views.Modulos.Profile.UserProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600"
             >

    <materialDesign:Card Width="450" 
                         Padding="0" 
                         UniformCornerRadius="8" 
                         Background="{DynamicResource MaterialDesignPaper}">

        <StackPanel>

                        <!-- Grid no tiene la propiedad Padding en WPF; usar Margin o envolver en Border -->
                        <Grid Background="{DynamicResource PrimaryHueLightBrush}" 
                                    Height="120" Margin="0,0,0,0">
                                <Border Background="{x:Null}" Padding="20">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                    <materialDesign:PackIcon Kind="AccountCircle" 
                                             Width="70" Height="70" 
                                             Foreground="White" 
                                             VerticalAlignment="Top"
                                             Margin="0,0,15,0"/>

                    <StackPanel>
                        <TextBlock Text="{Binding Gpe.GpeNombre}" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock Text="{Binding Gpe.GpeApellidos}" 
                                   FontSize="16" 
                                   Opacity="0.8" 
                                   Foreground="White"/>
                        <TextBlock Text="{Binding GusUser}" 
                                   Opacity="0.9" 
                                   FontSize="12" 
                                   FontWeight="SemiBold" 
                                   Foreground="White"/>
                    </StackPanel>
                </StackPanel>
                </Border>
            </Grid>

            <StackPanel Margin="20,15,20,10">

                <TextBlock Text="Detalles de Contacto y Personales" 
                           Style="{StaticResource MaterialDesignCaptionTextBlock}" 
                           Margin="0,0,0,10"
                           FontWeight="Bold"/>

                <Separator Margin="0,0,0,10" Style="{StaticResource MaterialDesignDarkSeparator}"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5">
                        <materialDesign:PackIcon Kind="IdCard" Width="20" Height="20" Opacity="0.6" VerticalAlignment="Center"/>
                        <TextBlock Text="Identificación:" FontWeight="SemiBold" Margin="10,0" Width="100"/>
                        <TextBlock Text="{Binding Gpe.GpeIdentificacion}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
                        <materialDesign:PackIcon Kind="Phone" Width="20" Height="20" Opacity="0.6" VerticalAlignment="Center"/>
                        <TextBlock Text="Teléfono:" FontWeight="SemiBold" Margin="10,0" Width="100"/>
                        <TextBlock Text="{Binding Gpe.GpeTelefono}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5">
                        <materialDesign:PackIcon Kind="MapMarker" Width="20" Height="20" Opacity="0.6" VerticalAlignment="Center"/>
                        <TextBlock Text="Dirección:" FontWeight="SemiBold" Margin="10,0" Width="100"/>
                        <TextBlock Text="{Binding Gpe.GpeDireccion}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5">
                        <materialDesign:PackIcon Kind="Earth" Width="20" Height="20" Opacity="0.6" VerticalAlignment="Center"/>
                        <TextBlock Text="País:" FontWeight="SemiBold" Margin="10,0" Width="100"/>
                        <TextBlock Text="{Binding Gpe.GpeCodePais}" VerticalAlignment="Center"/>
                    </StackPanel>

                </Grid>
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="20,10,20,20">

                <Button Content="CERRAR" 
                        Width="100" 
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                        CommandParameter="False"/>

            </StackPanel>

        </StackPanel>
    </materialDesign:Card>
</UserControl>